<%= flash[:notice] %>
<%= flash[:error] %>

<%=link_to "Add New Article", new_article_path, :class => "new article" %>


<table border="1">
	<tr>
		<td> Title </td>
		<td> Description </td>
	</tr>
	<% @articles.each do |article|%>
		<tr>
		<td><%= link_to article.title, article_path(article.id) %></td>
		<td><%= article.description %></td>
		<td><%= link_to "edit", edit_article_path(article.id) %></td>
		<td><%= link_to "delete", article_path(article.id), :confirm => "Are you sure to delete this article?", :method => "delete"%></td>
		</tr>
<% end %>
</table>